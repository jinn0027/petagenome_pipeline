Bootstrap: localimage
From: ../common/gcc.sif

%setup

%files
    ../../external/bowtie2.tar.gz /opt

%post
    # install perl
    dnf -y install \
        perl-4:5.32.1-481.el9

    pushd /opt
        # install bowtie2
        echo "############ bowtie2 ###############"
        tar -I pigz -xvf bowtie2.tar.gz
        chown -R $(whoami) bowtie2
        pushd bowtie2
            make -j$(nproc)
            make install 
        popd
    popd

%environment

%runscript

