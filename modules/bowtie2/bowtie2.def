Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/Miniconda3-py39_24.9.2-0-Linux-x86_64.sh /opt
    ../../external/bowtie2.tar.gz /opt

%post
    dnf -y install \
        git-2.43.5-2.el9_5 \
        gcc-c++-11.5.0-2.el9.alma.1 \
        make-1:4.3-8.el9 \
        zlib-devel-1.2.11 \
        perl-4:5.32.1-481.el9
        
    pushd /opt
        # install miniconda
        sh Miniconda3-py39_24.9.2-0-Linux-x86_64.sh -b -p /opt/miniconda3

        # install python libraries
        /opt/miniconda3/bin/conda config --add channels conda-forge
        /opt/miniconda3/bin/conda config --append channels bioconda
    
        # install bowtie2
        echo "############ bowtie2 ###############"
        tar xvfz bowtie2.tar.gz
        chown -R $(whoami) bowtie2
        pushd bowtie2
            make -j$(nproc)
            make install 
        popd
    popd

%environment
    export LC_ALL=C

%runscript
    bowtie2 --help
    
