Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/bedtools2.tar.gz /opt

%post
    dnf -y install \
        git-2.43.5-2.el9_5 \
        gcc-c++-11.5.0-2.el9.alma.1 \
        make-1:4.3-8.el9 \
        zlib-devel-1.2.11 \
        xz-devel-5.2.5-8.el9_0 \
        bzip2-devel-1.0.8-8.el9

    pushd /opt
        # install bedtools
        echo "############ bedtools ###############"
        tar xvfz bedtools2.tar.gz
	chown -R $(whoami) bedtools2
        pushd bedtools2
	    make autoversion
            make -j$(nproc)
            make install
        popd
    popd

%environment
    export LC_ALL=C

%runscript
    bedtools --help

    
