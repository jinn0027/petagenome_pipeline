Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/seqkit_linux_amd64.2.9.0.tar.gz /opt

%post
    pushd /opt
        # install seqkit
        echo "############ seqkit ###############"
        tar xvfz seqkit_linux_amd64.2.9.0.tar.gz
	chown $(whoami) seqkit
        mv -f seqkit /usr/local/bin
    popd

%environment
    export LC_ALL=C

%runscript
    seqkit --help    
