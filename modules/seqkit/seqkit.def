Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/seqkit_linux_amd64.2.9.0.tar.gz /opt

%post
    pushd /opt
        # install seqkit
        if true ; then
            tar xvfz seqkit_linux_amd64.2.9.0.tar.gz
            mv -f seqkit /usr/local/bin
        fi
    popd

%environment

%runscript
    seqkit -h    
