Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/ncbi-blast-2.16.0+-x64-linux.tar.gz /opt

%post
    dnf -y install \
        git-2.43.5-2.el9_5 \
        pigz-2.5-4.el9

    pushd /opt
        # install blast
        echo "############ blast ###############"
        tar -I pigz -xvf ncbi-blast-2.16.0+-x64-linux.tar.gz
        chown -R $(whoami) ncbi-blast-2.16.0+
    popd

%environment
    export LC_ALL=C
    export PATH=/opt/ncbi-blast-2.16.0+/bin:$PATH

%runscript
    blastn -help
