Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/spades.tar.gz /opt

%post
    dnf -y install \
        python3-devel-3.9.21-1.el9_5 \
        gcc-c++-11.5.0-2.el9.alma.1 \
        cmake-3.26.5-2.el9 \
        bzip2-devel-1.0.8-8.el9

    pushd /opt
        # install spades
        tar xvfz spades.tar.gz
        pushd spades
           ./spades_compile.sh
        popd
    popd

%environment
    export PATH=/opt/spades/bin:$PATH

%runscript
    spades.py -h
