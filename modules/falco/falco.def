Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/htslib.tar.gz /opt
    ../../external/falco.tar.gz /opt

%post
    dnf -y install \
        git-2.43.5-2.el9_5 \
        python3-devel-3.9.21-1.el9_5 \
        gcc-c++-11.5.0-2.el9.alma.1 \
        make-1:4.3-8.el9 \
        zlib-devel-1.2.11 \
        cmake-3.26.5-2.el9 \
        xz-devel-5.2.5-8.el9_0 \
        autoconf-2.69-39.el9 \
        automake-1.16.2-8.el9 \
        bzip2-devel-1.0.8-8.el9

    pushd /opt
        # install htslib
        # cf) https://kazumaxneo.hatenablog.com/entry/2024/05/10/024009
        echo "############ htslib ###############"
        tar xvfz htslib.tar.gz
	chown -R $(whoami) htslib
        pushd htslib
            autoheader
            autoreconf -i
            ./configure
            make -j$(nproc)
            make install
        popd
    
        # install falco
        # cf) https://kazumaxneo.hatenablog.com/entry/2024/04/20/011400
        echo "############ falco ###############"
        tar xvfz falco.tar.gz
	chown -R $(whoami) falco
        pushd falco
            ./autogen.sh
            ./configure CXXFLAGS="-O3 -Wall" --enable-hts
            make -j$(nproc) HAVE_HTSLIB=1 all
            make HAVE_HTSLIB=1 install
        popd
    popd

%environment
    export LC_ALL=C
    export LD_LIBRARY_PATH=/usr/local/lib:$LD_LIBRARY_PATH

%runscript
    falco --help
