Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/ncbi-blast-2.16.0+-x64-linux.20250110.tar.gz /opt

%post
    dnf -y install python3-devel pip \
                   gcc-c++ make-4.3 zlib-devel-1.2.11 cmake \
                   xz-devel autoconf automake bzip2-devel \

    pushd /opt
        # install ncbi-blast
        if true ; then
            tar xvfz ncbi-blast-2.16.0+-x64-linux.20250110.tar.gz
            pushd ncbi-blast
            popd
        fi
    popd

%environment

%runscript
    echo "PATH=$PATH"
    echo "LD_LIBRARY_PATH=$LD_LIBRARY_PATH"
    ls /opt/ncbi-blast
    
