Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/bowtie.tar.gz /opt

%post
    dnf -y install \
        gcc-c++-11.5.0-2.el9.alma.1 \
        make-1:4.3-8.el9 \
        zlib-devel-1.2.11
   
    pushd /opt
        # install bowtie
        tar xvfz bowtie.tar.gz
        pushd bowtie
            make -j$(nproc)
            make install
        popd
    popd

%environment

%runscript
    bowtie --help
    
