Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/megahit.tar.gz /opt

%post
    dnf -y install \
        git-2.43.5-2.el9_5 \
        python3-devel-3.9.21-1.el9_5 \
        gcc-c++-11.5.0-2.el9.alma.1 \
        make-1:4.3-8.el9 \
        cmake-3.26.5-2.el9 \
        zlib-devel-1.2.11

    pushd /opt
        # install megahit
        tar xvfz megahit.tar.gz
        pushd megahit
        mkdir build
        pushd build
	    cmake .. -DCMAKE_BUILD_TYPE=Release
            make -j$(nproc)
            make install
        popd
    popd

    pushd /usr/local/bin
        ln -s /usr/bin/python3 python
        ln -s /usr/bin/pip3 pip
    popd

%environment
    export LC_ALL=C

%runscript
    megahit --help

    
