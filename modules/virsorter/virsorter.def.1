Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/diamond.0.9.36.tar.gz /opt
    ../../external/hmmer.tar.gz /opt
    ../../external/Miniconda3-py39_24.9.2-0-Linux-x86_64.sh /opt
    ../../external/VirSorter.tar.gz /opt
    ../../external/virsorter-data-v2.updated.tar.gz /opt
    #../../external/virsorter-data-v2.tar.gz /opt
    ../../external/mga_x86_64.tar.gz /opt
    ../../external/ncbi-blast-2.16.0+-src.tar.gz /opt
    
%post
    dnf -y install \
        git-2.43.5-2.el9_5 \
        gcc-c++-11.5.0-2.el9.alma.1 \
        make-1:4.3-8.el9 \
        zlib-devel-1.2.11 \
        cmake-3.26.5-2.el9 \
        xz-devel-5.2.5-8.el9_0 \
        autoconf-2.69-39.el9 \
        automake-1.16.2-8.el9 \
        bzip2-devel-1.0.8-8.el9 \
        cpio-2.13-16.el9 \
        lmdb-libs-0.9.29-3.el9 \
        libzstd-devel-1.5.1-2.el9 \
        libcom_err-devel-1.46.5-5.el9 \
        krb5-devel-1.21.1-4.el9_5
        
    pushd /opt
        # install miniconda
        sh Miniconda3-py39_24.9.2-0-Linux-x86_64.sh -b -p /opt/miniconda3

        # install python libraries
        /opt/miniconda3/bin/conda config --add channels conda-forge
        /opt/miniconda3/bin/conda config --append channels bioconda

        /opt/miniconda3/bin/conda install -y \
            python=3 mcl=14.137 muscle=5.3 perl-bioperl=1.7.8 perl-file-which=1.24 \
            perl-parallel-forkmanager=2.03 perl-list-moreutils=0.430

        # install blast
        echo "############ blast ###############"
        #tar xvfz ncbi-blast-2.16.0+-x64-linux.tar.gz
        ##chown -R $(whoami) ncbi-blast-2.16.0+
        tar xvfz ncbi-blast-2.16.0+-src.tar.gz
        chown -R $(whoami) ncbi-blast-2.16.0+-src
        pushd ncbi-blast-2.16.0+-src/c++
            ./configure --prefix=/usr/local/ncbi
            make -j$(nproc)
            make install
        popd

        # install diamond
        echo "############ diamond.0.9.36 ###############"
        tar xvfz diamond.0.9.36.tar.gz
        mv diamond.0.9.36 diamond
        chown -R $(whoami) diamond
        pushd diamond
            mkdir build
            pushd build
                cmake -DZSTD_LIBRARY=/usr/lib64/libzstd.so ..            
                make -j$(nproc)
                make install
            popd
        popd

        # install hmmer
        echo "############ hmmer ###############"
        tar xvfz hmmer.tar.gz
        chown -R $(whoami) hmmer
        pushd hmmer
            autoconf
            ./configure
            make -j$(nproc)
            make install
        popd
        
        # install virsorter
        echo "############ virsorter ###############"
        tar xvfz VirSorter.tar.gz
        chown -R $(whoami) VirSorter
        pushd VirSorter
            pushd Scripts
                make clean
                make -j$(nproc)
            popd
            # install database
            tar xvfz /opt/virsorter-data-v2.updated.tar.gz -C .
            # install MetaGeneAnnotator
            tar xvfz /opt/mga_x86_64.tar.gz -C .
        popd
    popd

%environment
    export LC_ALL=C
    export PATH=/opt/miniconda3/bin:$PATH
    #export PATH=/opt/ncbi-blast-2.16.0+/bin:$PATH
    export PATH=/opt/VirSorter:$PATH
    export LD_LIBRARY_PATH=/usr/lib64:$LD_LIBRARY_PATH
  
%runscript
    wrapper_phage_contigs_sorter_iPlant.pl --help

    
