Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/Miniconda3-py39_24.9.2-0-Linux-x86_64.sh /opt
    # modified not to use jcompiler and changed mpivar default value.
    ../../external/BBMap.modified.tar.gz /opt
    ../../external/ecj-4.5.2.jar /opt

%post
    dnf -y install \
        git-2.43.5-2.el9_5 \
        pigz-2.5-4.el9 \
        ant-openjdk17-1.10.9-11.el9_5 openmpi-java-2:4.1.1-7.el9

    pushd /opt
        # install miniconda
        sh Miniconda3-py39_24.9.2-0-Linux-x86_64.sh -b -p /opt/miniconda3

        # install python libraries
        /opt/miniconda3/bin/conda config --add channels conda-forge
        /opt/miniconda3/bin/conda config --append channels bioconda

        # install bbmap
        echo "############ bbmap ###############"
        tar -I pigz -xvf BBMap.modified.tar.gz
        chown -R $(whoami) BBMap
        pushd BBMap
            ant
        popd
        # modify to use /opt/BBMap/sh/bbmap.sh
        rm -f /opt/BBMap/sh/current
        ln -s /opt/BBMap/build /opt/BBMap/sh/current
        ln -s /opt/BBMap/jni /opt/BBMap/sh/jni
    popd

%environment
    export LC_ALL=C
    export PATH=/opt/miniconda3/bin:$PATH
    export PATH=/opt/BBMap/sh:$PATH

%runscript
    bbmap.sh --help
