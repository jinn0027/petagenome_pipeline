Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/BBMap.tar.gz /opt

%post
    dnf -y install java-21-openjdk

    pushd /opt
        # install bbmap
        if true ; then
            tar xvfz BBMap.tar.gz
            pushd BBMap
            popd
        fi
    popd

%environment

%runscript
    echo "PATH=$PATH"
    echo "LD_LIBRARY_PATH=$LD_LIBRARY_PATH"
    ls /opt/bbmap
    
