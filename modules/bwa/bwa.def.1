Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/bwa.tar.gz /opt

%post
    dnf -y install \
        git-2.43.5-2.el9_5 \
        pigz-2.5-4.el9 \
        gcc-c++-11.5.0-2.el9.alma.1 \
        make-1:4.3-8.el9 \
        zlib-devel-1.2.11

    pushd /opt
        # install bwa
        echo "############ bwa ###############"
        tar -I pigz -xvf bwa.tar.gz
        chown -R $(whoami) bwa
        pushd bwa
            make -j$(nproc)
            #make install
        popd
    popd

%environment
    export LC_ALL=C
    export PATH=/opt/bwa:$PATH

%runscript
    bwa
