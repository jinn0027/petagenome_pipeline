Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/bwa.tar.gz /opt

%post
    dnf -y install gcc-c++ make-4.3 zlib-devel-1.2.11 \

    pushd /opt
        # install bwa
        if true ; then
            tar xvfz bwa.tar.gz
            pushd bwa
                make -j$(nproc)
                #make install
            popd
        fi
    popd

%environment
    export PATH=/opt/bwa:$PATH

%runscript
    bwa
