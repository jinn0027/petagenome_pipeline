Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/minimap2.tar.gz /opt

%post
    dnf -y install \
        git-2.43.5-2.el9_5 \
        gcc-c++-11.5.0-2.el9.alma.1 \
        make-1:4.3-8.el9 \
        zlib-devel-1.2.11

    pushd /opt
        # install minimap2
        echo "############ minimap2 ###############"
        tar xvfz minimap2.tar.gz
	chown -R $(whoami) minimap2
        pushd minimap2
            make -j$(nproc)
            #make install
        popd
    popd

%environment
    export LC_ALL=C
    export PATH=/opt/minimap2:$PATH

%runscript
    bwa
