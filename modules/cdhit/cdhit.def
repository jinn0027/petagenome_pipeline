Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/cdhit.tar.gz /opt

%post
    dnf -y install gcc-c++ make-4.3 zlib-devel-1.2.11

    pushd /opt
        # install cdhit
        if true ; then
            tar xvfz cdhit.tar.gz
            pushd cdhit
	        make -j$(nproc)
	        make install
	        pushd cd-hit-auxtools
                    make -j$(nproc)
		    cp -f cd-hit-dup cd-hit-lap read-linker /usr/local/bin
		popd
            popd
        fi
    popd

%environment

%runscript
    cd-hit --help

    
