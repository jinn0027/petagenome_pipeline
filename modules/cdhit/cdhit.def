Bootstrap: localimage
From: ../common/gcc.sif

%setup

%files
    ../../external/cdhit.tar.gz /opt

%post
    pushd /opt
        # install cdhit
        echo "############ cdhit ###############"
        tar -I pigz -xvf cdhit.tar.gz
        chown -R $(whoami) cdhit
        pushd cdhit
            make -j$(nproc)
            make install
            # install auxtools
            pushd cd-hit-auxtools
                make -j$(nproc)
                cp -f cd-hit-dup cd-hit-lap read-linker /usr/local/bin
            popd
        popd
    popd

%environment

%runscript
