Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/cdhit.tar.gz /opt

%post
    dnf -y install \
        git-2.43.5-2.el9_5 \
        gcc-c++-11.5.0-2.el9.alma.1 \
        make-1:4.3-8.el9 \
        zlib-devel-1.2.11

    pushd /opt
        # install cdhit
        echo "############ cdhit ###############"
        tar xvfz cdhit.tar.gz
	chown -R $(whoami) cdhit
        pushd cdhit
            make -j$(nproc)
            make install
            # install auxtools
            pushd cd-hit-auxtools
                make -j$(nproc)
                cp -f cd-hit-dup cd-hit-lap read-linker /usr/local/bin
            popd
        popd
    popd

%environment
    export LC_ALL=C

%runscript
    cd-hit --help

    
