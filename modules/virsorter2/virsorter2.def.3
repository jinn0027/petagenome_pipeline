Bootstrap: localimage
From: ../common/gcc.sif

%setup

%files
    ../../external/VirSorter2.tar.gz /opt
    ../../external/db.tar.gz /opt
    ../../external/Prodigal.tar.gz /opt
    ../../external/hmmer.tar.gz /opt

%post
    pushd /opt
        # install python libraries
        # (ref) https://github.com/jiarong/VirSorter2/tree/v2.2.4
        /opt/miniconda3/bin/mamba install -y \
            python=3.8.20 \
            scikit-learn=0.22.1 \
            imbalanced-learn=0.7.0 \
            seaborn=0.13.2 \
            screed=1.1.3 \
            ruamel.yaml=0.18.6 \
            snakemake=5.26.0 \
            click=8.1.7

        # install prodigal
        echo "############ prodigal ###############"
        tar -I pigz -xvf Prodigal.tar.gz
        chown -R $(whoami) Prodigal
        pushd Prodigal
            make -j$(nproc)
            make install
        popd

        # install hmmer
        echo "############ hmmer ###############"
        tar -I pigz -xvf hmmer.tar.gz
        chown -R $(whoami) hmmer
        pushd hmmer
            autoconf
            ./configure
            make -j$(nproc)
            make install
        popd

        # install virsorter2
        echo "############ virsorter2 ###############"
        tar -I pigz -xvf VirSorter2.tar.gz
        chown -R $(whoami) VirSorter2
        pushd VirSorter2
            /opt/miniconda3/bin/pip install -e .
        popd
        # install database
        tar -I pigz -xvf /opt/db.tar.gz -C . --no-same-owner 
        chown -R $(whoami) db
        chmod -R 777 db
        /opt/miniconda3/bin/virsorter config --init-source --db-dir=./db
    popd

%environment

%runscript

