Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/Miniconda3-py39_24.9.2-0-Linux-x86_64.sh /opt
    ../../external/VirSorter2.tar.gz /opt

%post
    dnf -y install \
        git-2.43.5-2.el9_5 \
	wget-1.21.1-8.el9_4

    pushd /opt
        # install miniconda
	sh Miniconda3-py39_24.9.2-0-Linux-x86_64.sh -b -p /opt/miniconda3

        # install python libraries
        # (ref) https://github.com/jiarong/VirSorter2/tree/v2.2.4
        /opt/miniconda3/bin/conda config --add channels conda-forge
	/opt/miniconda3/bin/conda config --append channels bioconda
        /opt/miniconda3/bin/conda install -y \
            python=3.8.20 scikit-learn=0.22.1 imbalanced-learn=0.7.0 pandas=2.0.3 \
            seaborn=0.13.2 hmmer=3.3 prodigal=2.6.3 screed=1.1.3 ruamel.yaml=0.18.6 \
            snakemake=5.26.0 click=8.1.7 mamba=1.5.8
	
        # install virsorter2
        echo "############ virsorter2 ###############"
        tar xvfz VirSorter2.tar.gz
	chown -R $(whoami) VirSorter2
        pushd VirSorter2
            /opt/miniconda3/bin/pip install -e .
        popd
        # install database
        PATH=/opt/miniconda3/bin:$PATH /opt/miniconda3/bin/virsorter setup -d db -j $(nproc)
    popd

%environment
    export LC_ALL=C
    export PATH=/opt/miniconda3/bin:$PATH

%runscript
    virsorter -h
    
