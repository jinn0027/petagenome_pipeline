Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/Miniconda3-py39_24.9.2-0-Linux-x86_64.sh /opt
    ../../external/VirSorter2.tar.gz /opt
    ../../external/db.tar.gz /opt
    ../../external/Prodigal.tar.gz /opt
    ../../external/hmmer.tar.gz /opt

%post
    dnf -y install \
        git-2.43.5-2.el9_5 \
        pigz-2.5-4.el9 \
        gcc-c++-11.5.0-2.el9.alma.1 \
        zlib-devel-1.2.11 \
        cmake-3.26.5-2.el9 \
        xz-devel-5.2.5-8.el9_0 \
        autoconf-2.69-39.el9 \
        automake-1.16.2-8.el9 \
        bzip2-devel-1.0.8-8.el9

    pushd /opt
        # install miniconda
        sh Miniconda3-py39_24.9.2-0-Linux-x86_64.sh -b -p /opt/miniconda3

        # install python libraries
        # (ref) https://github.com/jiarong/VirSorter2/tree/v2.2.4
        /opt/miniconda3/bin/conda config --add channels conda-forge
        /opt/miniconda3/bin/conda config --append channels bioconda
        /opt/miniconda3/bin/conda install -y \
            python=3.8.20 scikit-learn=0.22.1 imbalanced-learn=0.7.0 pandas=2.0.3 \
            seaborn=0.13.2 screed=1.1.3 ruamel.yaml=0.18.6 \
            snakemake=5.26.0 click=8.1.7 mamba=1.5.8

        # install prodigal
        echo "############ prodigal ###############"
        tar -I pigz -xvf Prodigal.tar.gz
        chown -R $(whoami) Prodigal
        pushd Prodigal
            make -j$(nproc)
            make install
        popd

        # install hmmer
        echo "############ hmmer ###############"
        tar -I pigz -xvf hmmer.tar.gz
        chown -R $(whoami) hmmer
        pushd hmmer
            autoconf
            ./configure
            make -j$(nproc)
            make install
        popd

        # install virsorter2
        echo "############ virsorter2 ###############"
        tar -I pigz -xvf VirSorter2.tar.gz
        chown -R $(whoami) VirSorter2
        pushd VirSorter2
            /opt/miniconda3/bin/pip install -e .
        popd
        # install database
        tar -I pigz -xvf /opt/db.tar.gz -C . --no-same-owner 
        chown -R $(whoami):$(whoami) db
        chmod -R 777 db
        /opt/miniconda3/bin/virsorter config --init-source --db-dir=./db
    popd

%environment
    export LC_ALL=C
    export PATH=/opt/miniconda3/bin:$PATH

%runscript
    virsorter -h
    
