Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/cutadapt.tar.gz /opt

%post
    dnf -y install python3-devel-3.9.21-1.el9_5

    pushd /opt
        # install cutadapt
        tar xvfz cutadapt.tar.gz
        pip install cutadapt
    popd

%environment

%runscript
    cutadapt --help
