Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/cutadapt.tar.gz /opt

%post
    dnf -y install \
        git-2.43.5-2.el9_5 \
        python3-devel-3.9.21-1.el9_5

    pushd /opt
        # install cutadapt
        echo "############ cutadapt ###############"
        tar xvfz cutadapt.tar.gz
	chown -R $(whoami) cutadapt
        pip install cutadapt
    popd

%environment
    export LC_ALL=C

%runscript
    cutadapt --help
