Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/Prodigal.tar.gz /opt

%post
    dnf -y install gcc-c++ make-4.3

    pushd /opt
        # install prodigal
        if true ; then
            tar xvfz Prodigal.tar.gz
            pushd Prodigal
	    make -j$(nproc)
	    make install
            popd
        fi
    popd

%environment

%runscript
    prodigal -h
