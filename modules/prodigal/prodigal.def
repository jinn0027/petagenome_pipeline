Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/Prodigal.tar.gz /opt

%post
    dnf -y install \
        gcc-c++-11.5.0-2.el9.alma.1 \
        make-1:4.3-8.el9

    pushd /opt
        # install prodigal
        tar xvfz Prodigal.tar.gz
        pushd Prodigal
            make -j$(nproc)
	    make install
        popd
    popd

%environment

%runscript
    prodigal -h
