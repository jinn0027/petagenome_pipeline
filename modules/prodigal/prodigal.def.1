Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/Prodigal.tar.gz /opt

%post
    dnf -y install \
        git-2.43.5-2.el9_5 \
        pigz-2.5-4.el9 \
        gcc-c++-11.5.0-2.el9.alma.1 \
        make-1:4.3-8.el9

    pushd /opt
        # install prodigal
        echo "############ prodigal ###############"
        tar -I pigz -xvf Prodigal.tar.gz
        chown -R $(whoami) Prodigal
        pushd Prodigal
            make -j$(nproc)
            make install
        popd
    popd

%environment
    export LC_ALL=C

%runscript
    prodigal -h
