Bootstrap: localimage
From: ../common/gcc.sif

%setup

%files
    ../../external/Prodigal.tar.gz /opt

%post
    pushd /opt
        # install prodigal
        echo "############ prodigal ###############"
        tar -I pigz -xvf Prodigal.tar.gz
        chown -R $(whoami) Prodigal
        pushd Prodigal
            make -j$(nproc)
            make install
        popd
    popd

%environment

%runscript
