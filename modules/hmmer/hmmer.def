Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/hmmer.tar.gz /opt

%post
    dnf -y install \
        git-2.43.5-2.el9_5 \
        gcc-c++-11.5.0-2.el9.alma.1 \
        make-1:4.3-8.el9 \
        zlib-devel-1.2.11 \
        cmake-3.26.5-2.el9 \
        xz-devel-5.2.5-8.el9_0 \
        autoconf-2.69-39.el9 \
        automake-1.16.2-8.el9 \
        bzip2-devel-1.0.8-8.el9

    pushd /opt
        # install hmmer
        echo "############ hmmer ###############"
        tar xvfz hmmer.tar.gz
	chown -R $(whoami) hmmer
        pushd hmmer
            autoconf
            ./configure
            make -j$(nproc)
            make install
        popd
    popd

%environment

%runscript
    jackhmmer -h
    
