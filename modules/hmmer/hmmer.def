Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/hmmer.tar.gz /opt

%post
    dnf -y install gcc-c++ make-4.3 zlib-devel-1.2.11 cmake \
                   xz-devel autoconf automake bzip2-devel \

    pushd /opt
        # install hmmer
        if true ; then
            tar xvfz hmmer.tar.gz
            pushd hmmer
                autoconf
                ./configure
                make -j$(nproc)
                make install
            popd
        fi
    popd

%environment

%runscript
    jackhmmer -h
    
