Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/fastqc_v0.12.1.zip /opt

%post
    dnf -y install unzip perl perl-FindBin java-21-openjdk

    pushd /opt

        # install fastqc
        if true ; then
            unzip fastqc_v0.12.1.zip
        fi
    popd

%environment
    export PATH=/opt/FastQC:$PATH

%runscript
    fastqc -h
    