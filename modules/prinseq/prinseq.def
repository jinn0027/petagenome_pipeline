Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/prinseq.tar.gz /opt

%post
    dnf -y install perl-4:5.32.1-481.el9

    pushd /opt
        # install prinseq
        tar xvfz prinseq.tar.gz
        chmod +x prinseq/*.pl
    popd

%environment
    export PATH=/opt/prinseq:$PATH

%runscript
    prinseq-lite.pl -h
