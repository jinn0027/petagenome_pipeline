Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/prinseq.20250110.tar.gz /opt

%post
    dnf -y install perl perl-FindBin

    pushd /opt
        # install prinseq
        if true ; then
            tar xvfz prinseq.20250110.tar.gz
	    chmod +x prinseq/*.pl
        fi
    popd

%environment
    export PATH=/opt/prinseq:$PATH

%runscript
    prinseq-lite.pl -h
