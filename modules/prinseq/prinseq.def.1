Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/prinseq.tar.gz /opt

%post
    dnf -y install \
        git-2.43.5-2.el9_5 \
        perl-4:5.32.1-481.el9

    pushd /opt
        # install prinseq
        echo "############ prinseq ###############"
        tar xvfz prinseq.tar.gz
        chown -R $(whoami) prinseq
        chmod +x prinseq/*.pl
    popd

%environment
    export LC_ALL=C
    export PATH=/opt/prinseq:$PATH

%runscript
    prinseq-lite.pl -help
