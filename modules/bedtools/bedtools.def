Bootstrap: docker
From: almalinux:9

%setup

%files
    ../../external/bedtools2.tar.gz /opt

%post
    dnf -y install gcc-c++ make-4.3 zlib-devel-1.2.11 \
           xz-devel bzip2-devel

    pushd /opt
        # install bedtools
        if true ; then
            tar xvfz bedtools2.tar.gz
            pushd bedtools2
                make -j$(nproc)
                make install
            popd
        fi
    popd

%environment

%runscript
    bedtools --help

    
